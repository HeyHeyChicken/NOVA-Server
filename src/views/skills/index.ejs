<div class="row">
    <div class="col col-12 col-sm-12 col-md-6 col-lg-4" v-for="(skill,index) in skills.Library">
        <b-card no-body v-b-modal="'modal-skill'+index">
            <b-card-header>
                <div class="wallpaper" :style="{ backgroundImage: 'url(' + skill.wallpaper + ')' }"></div>
                <div class="icon" :style="{ backgroundImage: 'url(' + skill.icon + ')' }"></div>
            </b-card-header>
            <b-card-body>
                <b-card-title>{{skill.title}}</b-card-title>
                <div class="installed" v-if="skills.Installed.findIndex(x => x.GIT.URL === skill.git) > -1">
                    <i class="fas fa-check"></i>
                    <span>{{Dictionary.installed}}</span>
                </div>
            </b-card-body>
        </b-card>
    </div>
</div>